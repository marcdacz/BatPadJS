{
  "name": "REST Method Tests",
  "configs": {
    "baseUrl": "https://jsonplaceholder.typicode.com"  
  },
  "scenarios": [    
    {
      "test": "GET Method ",
      "request": {
        "url": "/users/1/albums",
        "method": "get"
      },
      "expected": {
        "status": 200,
        "data": [
          { "path": "$[0].title", "equals": "quidem molestiae enim" }
        ]
      }
    },
    {
      "test": "POST Method",
      "request": {
        "url": "/posts",
        "method": "post",
        "body": {
          "title": "Testing Post Method",
          "body": "This test verifies the post method"
        }
      },
      "expected": {
        "status": 201,
        "data": [
          { "path": "$.title", "equals": "Testing Post Method" }
        ]
      }
    },
    {
      "test": "PUT Method",
      "request": {
        "url": "/posts/1",
        "method": "put",
        "body": {
          "id": 1,
          "userId": 1,
          "title": "Testing Put Method",
          "body": "This test verifies the put method"
        }
      },
      "expected": {
        "status": 200,
        "data": [
          { "path": "$.title", "equals": "Testing Put Method" }
        ]
      }
    },
    {
      "test": "PATCH Method",
      "request": {
        "url": "/posts/1",
        "method": "patch",
        "body": {
          "title": "Testing Patch Method",
          "body": "This test verifies the patch method"
        }
      },
      "expected": {
        "status": 200,
        "data": [
          { "path": "$.title", "equals": "Testing Patch Method" }
        ]
      }
    },
    {
      "test": "DELETE Method",
      "request": {
        "url": "/posts/1",
        "method": "delete"
      },
      "expected": {
        "status": 200
      }
    }
  ]
}
